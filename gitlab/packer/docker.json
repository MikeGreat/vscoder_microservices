{
  "variables": {
    "project_id": null,
    "source_image_family": null,
    "machine_type": "f1-micro",
    "zone": "europe-west1-d",
    "disk_size": "10",
    "disk_type": "pd-standard",
    "network": "default",
    "subnetwork": "",
    "tags": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "image_name": "gitlab-docker-base-{{timestamp}}",
      "image_family": "gitlab-docker-base",
      "source_image_family": "{{user `source_image_family`}}",
      "zone": "{{user `zone`}}",
      "ssh_username": "appuser",
      "machine_type": "{{user `machine_type`}}",
      "image_description": "gitlab-docker base image",
      "disk_size": "{{user `disk_size`}}",
      "disk_type": "{{user `disk_type`}}",
      "network": "{{user `network`}}",
      "subnetwork": "{{user `subnetwork`}}",
      "tags": "{{user `tags`}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "command": "./packer/scripts/ansible-playbook.sh",
      "playbook_file": "ansible/playbooks/docker.yml",
      "ansible_env_vars": [
        "ANSIBLE_ROLES_PATH=./ansible/roles_imported:./ansible/roles"
      ]
    }
  ]
}
